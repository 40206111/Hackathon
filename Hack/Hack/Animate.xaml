<UserControl x:Class="Hack.Animate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hack"
             mc:Ignorable="d" Width="80"
             Name="dots" Height="34.63">
    <Viewbox Width="{Binding Width, ElementName=dots}" Height="{Binding Height, ElementName=dots}"   HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Width="1200" Height="520">
            <Ellipse x:Name="_1" Width="100" Height="100" Stretch="Fill" Fill="RoyalBlue" Margin="150,108,950,108"/>
            <Ellipse x:Name="_2" Height="100" Stretch="Fill" Fill="RoyalBlue" Margin="350,168,0,167" HorizontalAlignment="Left" Width="100"/>
            <Ellipse x:Name="_3" Width="100" Height="100" Stretch="Fill" Fill="RoyalBlue" Margin="550,210,0,210" HorizontalAlignment="Left" />
            <Ellipse x:Name="_4" Width="100" Height="100 " Stretch="Fill" Fill="RoyalBlue" Margin="750,215,0,205" HorizontalAlignment="Left"/>
            <Ellipse x:Name="_5" Height="100" Stretch="Fill" Fill="RoyalBlue" Margin="950,210,0,210" HorizontalAlignment="Left" Width="100"/>
        </Grid>
    </Viewbox>
</UserControl>
